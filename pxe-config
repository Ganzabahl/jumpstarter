        remote:
          url: http://1.2.3.4/ssh/ssh_host_ecdsa_key.pub
      mode: 0644
    - path: /etc/ssh/ssh_host_ed25519_key
      filesystem: root
      contents:
        remote:
          url: http://1.2.3.4/ssh/ssh_host_ed25519_key
