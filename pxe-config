etcd:
  version: 3.4.0
  name: "etcdserver"
  initial_cluster: "etcdserver=http://1.2.3.4:2380"
  initial_advertise_peer_urls: "http://1.2.3.4:2380"
  advertise_client_urls: "http://1.2.3.4:2379"
  listen_client_urls: "http://1.2.3.4:2379"
  listen_peer_urls: "http://1.2.3.4:2380"
systemd:
  units:
    - name: etcd-member.service
      enable: true
      dropins:
        - name: conf1.conf
          contents: |
            [Service]
            Environment="ETCD_NAME=etcdserver"
systemd:
  units:
    - name: docker-tcp.socket
      enable: yes
      mask: false
      contents: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=2375
        BindIPv6Only=both
        Service=docker.service

        [Install]
        WantedBy=sockets.target
    - name: enable-docker-tcp.service
      enable: true
      contents: |
        [Unit]
        Description=Enable the Docker Socket for the API

        [Service]
        Type=oneshot
        ExecStart=/usr/bin/systemctl enable docker-tcp.socket

storage:
  files:
    - path: /etc/ssh/sshd_config
      filesystem: root
      mode: 0600
      contents:
        inline: |
          # Use most defaults for sshd configuration.
          UsePrivilegeSeparation sandbox
          Subsystem sftp internal-sftp
          UseDNS no

          PermitRootLogin no
          AllowUsers core
          AuthenticationMethods publickey
    - path: /etc/ssh/ssh_host_dsa_key
      filesystem: root
      contents:
        remote:
          url: http://1.2.3.4/ssh/ssh_host_dsa_key
      mode: 0644
    - path: /etc/ssh/ssh_host_dsa_key.pub
      filesystem: root
